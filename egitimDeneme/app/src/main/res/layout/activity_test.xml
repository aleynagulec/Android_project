<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".TestActivity"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/soruResim"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="38dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/elma"
        app:layout_constraintBottom_toTopOf="@+id/soruTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soruTv"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="90dp"
        android:layout_marginEnd="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginStart="37dp"
        android:gravity="center"
        android:text="Soru"
        android:textColor="#4b0000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ynlsCevap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soruResim" />

    <Button
        android:id="@+id/dgrCevap"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="108dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="108dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dogru"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ynlsCevap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soruTv"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/ynlsCevap"
        android:layout_width="73dp"
        android:layout_height="74dp"
        android:layout_marginBottom="43dp"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:background="@drawable/yanlis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dgrCevap"
        app:layout_constraintTop_toBottomOf="@+id/soruTv" />


</android.support.constraint.ConstraintLayout>